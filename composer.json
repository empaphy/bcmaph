{
    "name": "empaphy/colorphul",
    "description": "Color library for PHP",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "empaphy/composer-yaml": "^1.1",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    },
    "autoload": {
        "files": [
            "src/bcmath.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "empaphy/composer-yaml": true
        }
    }
}
